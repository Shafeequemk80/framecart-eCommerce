<%- include("../layouts/adminHeader.ejs")%>
<%- include("../layouts/adminSideBar.ejs")%>

<div class="nk-app-root nk-body bg-lighter npc-general has-sidebar">
  <div class="nk-main">
    <div class="nk-wrap">
      <div class="nk-header nk-header-fixed is-light">
        <div class="container-fluid">
          <div class="nk-header-wrap">
            <div class="nk-header-brand d-xl-none">
              <a href="/static/admin/index.html" class="logo-link">
                <img class="logo-light logo-img" src="/static/admin/images/logo.png" srcset="/demo2/images/logo2x.png 2x" alt="logo" />
                <img class="logo-dark logo-img" src="/static/admin/images/logo-dark.png" srcset="/demo2/images/logo-dark2x.png 2x" alt="logo-dark" />
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="nk-content">
        <div class="container-fluid">
          <div class="nk-content-inner">
            <div class="nk-content-body">

              <!-- Admin Panel Order List Section -->
              <div class="nk-block-head nk-block-head-sm">
                <!-- ... -->
              </div>
              <div class="nk-block">
                <div class="nk-tb-list is-separate is-medium mb-3 ">
                  <% orders.forEach(function(value) { %>
                    <!-- Order Details Section -->
                    <div class="container d-flex justify-content-center mb-5 ">
                      <div class="bg-light col-8 d-flex flex-column pt-5 p-5">
                        <div class="d-flex align-items-start flex-column mb-3">
                          <h6>Order Placed</h6>
                          <!-- Replace with your order details content -->
                          <p><%= value.order.deliveryDate %></p>
                          <h6>Delivery Expect On: <strong><%= value.order.orderDate %></strong></h6>
                        </div>
                        <div class="d-flex border-bottom w-100">
                          <div>
                            <img src="/static/productsImages/<%= value.productDetails.images[0] %>" style="width: auto; width: 190px" alt="Image Desc" />
                          </div>
                          <div class="ps-5 d-flex align-items-start flex-column">
                            <h5><%= value.productDetails.productname %></h5>
                            <p>Qty: <%= value.count %></p>
                            <p><%= value.paymentStatus %></p>
                            <h4><%= value.totalprice %></h4>

                            <% if(value.orderStatus !== "Cancelled") { %>
                              <a href="/admin/cancelorder?id=<%= value.productDetails._id %>">
                                <button class="btn btn-primary mb-5">Cancel</button>
                              </a>
                            <% } else { %>
                              <a>
                                <button class="btn btn-primary mb-5">Cancelled</button>
                              </a>
                            <% } %>
                           <div class="d-flex flex-row col-12">
                            <form id="orderStatusForm">
                              <input type="hidden" value="<%= value.productDetails._id %>" name="id">
                              <input type="hidden" value="<%= value.order.orderId %>" name="orderId">
                              <div class="form-group">
                                <label for="newStatus">New Status:</label>
                                <select class="form-control" id="newStatus" name="newStatus">
                                  <option value="Shipped">Shipped</option>
                                  <option value="Out of Delivery">Out of Delivery</option>
                                  <option value="Delivered">Delivered</option>
                                  <!-- Add more options as needed -->
                                </select>
                              </div>
                              <div class="form-group">
                                <button type="submit" class="btn btn-primary" onclick="changeOrderStatus(event)">Change Status</button>
                              </div>
                            </form>
                        </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- End of Order Details Section -->
                  <% }); %>
                </div>
              </div>
              <!-- End of Admin Panel Order List Section -->

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function changeOrderStatus(event) {
    event.preventDefault(); // Prevent the default form submission
 
  
    // Get the selected value from the dropdown
    const newStatus = document.getElementById("newStatus").value;
  
    // Get the values from the hidden inputs
    const id = document.querySelector('input[name="id"]').value;
    const orderId = document.querySelector('input[name="orderId"]').value;
  
    // Perform an AJAX request to update the data
    updateOrderStatus(orderId, newStatus, id);
  }
  
  function updateOrderStatus(orderId, newStatus, id) {
    // Example: Perform an AJAX request to update the order status
    fetch("/admin/updateOrderStatus", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ orderId: orderId, newStatus: newStatus, id: id }),
    })
      .then(response => response.json())
      .then(data => {
      
      })
      .catch(error => {
        console.error('Error:', error);
        // Handle the error (e.g., show an error message)
      });
  }
  </script>

