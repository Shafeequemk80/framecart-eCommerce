                              </div>
                              <div class="nk-tb-col">
                                <%if(value.paymentMethod=="online"){%>
                                <span
                                  class="badge badge-dot badge-dot-xs bg-success"
                                  >Online</span>
                                  <%}else if(value.paymentMethod=="Wallet"){%>
                                    <span
                                  class="badge badge-dot badge-dot-xs bg-danger"
                                  >Wallet</span>
                                    <%}else{%>
                                      <span
                                      class="badge badge-dot badge-dot-xs bg-danger"
                                      >Cash on Devilery</span>

                                    <%}%>
                              </div>
                            </div>
                            <% }) %>
                          </div>
                        
                        </div>
                      
