                              <div class="nk-ecwg1-ck">
                                <canvas
                                  class="ecommerce-line-chart-s1"
                                  id="totalSales"
                                ></canvas>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-xxl-4 col-md-6">
