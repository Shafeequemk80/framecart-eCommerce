                      <div class="col-xxl-4">
                        <div class="row g-gs">
                          
                        </div>
                      </div>
                      <div class="col-xxl-8">
                        
                        <div class="card card-full">
                          <div class="card-inner">
                            <div class="card-title-group">
                              <div class="card-title">
                                <h6 class="title">Recent Orders</h6>
                              </div>
                            </div>
                          </div>

                          <div class="nk-tb-list mt-n2">
                            
                            <div class="nk-tb-item nk-tb-head">
                              <div class="nk-tb-col">
                                <span>Order No.</span>
                              </div>
                              <div class="nk-tb-col tb-col-sm">
                                <span>Customer</span>
                              </div>
                              <div class="nk-tb-col tb-col-md">
                                <span>Date</span>
                              </div>
                              <div class="nk-tb-col"><span>Amount</span></div>
                              <div class="nk-tb-col">
                                <span class="d-none d-sm-inline">Status</span>
                              </div>
                            </div>
                            <% recentOrders.forEach((value) => { %>
                            <div class="nk-tb-item">
                              <div class="nk-tb-col">
                                <span class="tb-lead"
                                  ><a href="#"><%=value.orderId%></a></span
                                >
                              </div>
                              <div class="nk-tb-col tb-col-sm">
                                <div class="user-card">
                                  <div class="user-avatar sm bg-purple-dim">
                                    <span><%=value.user.firstname.charAt(0).toUpperCase() +
                                      value.user.lastname.charAt(0).toUpperCase()%></span>
                                  </div>
                                  <div class="user-name">
                                    <span class="tb-lead"
                                      ><%=value.user.firstname%></span
                                    >
                                  </div>
                                </div>
                              </div>
                              <div class="nk-tb-col tb-col-md">
                                <span class="tb-sub"><%= moment(value.orderDate).format('DD/MM/YYYY') %>
                                </span>
                              </div>
                              <div class="nk-tb-col">
                                <span class="tb-sub tb-amount"
                                  >â‚¹ <%=value.amount%> <span> INR</span></span
