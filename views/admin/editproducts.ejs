<%- include("../layouts/adminHeader.ejs")%> <%-
include("../layouts/adminSideBar.ejs")%>
<div class="nk-content">
  <div class="container-fluid">
    <div class="nk-content-inner">
      <div class="nk-content-body">
        <div class="nk-block-head nk-block-head-sm">
          <div class="nk-block-between">
            <div class="nk-block-head-content">
              <h3 class="nk-block-title page-title">
                Products <span class="text-grey">/ edit Product</span>
              </h3>
              <input type="hidden" name="user_id" value="<%=products._id %>">
              <div class="container-fluid mt-3">
                <div class="row">
                  <div class="col-md-12 mx-auto">
                    <div class="card">
                      <div class="card-body">
                        <form
                          action=""
                          method="post"
                          enctype="multipart/form-data"
                        >
                          <div class="row g-3 mt-2">
                            <div class="col-md-12">
                              <div class="">
                                
                                <label for="product-title" class="form-label"
                                  >Product Name</label
                                >
                                <input
                                  type="text" 
                                  value="<%=products.productname%>"
                                  name="productname"
                                  id="product-title"
                                  class="form-control"
                                  required
                                />
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div>
                                <label for="frameshape" class="form-label">Frame Shape</label>
                                <select name="frameshape" id="frameshape" class="form-control" required>

                                  <%category.forEach((value)=>{%>
                                  <option value="<%=value.categoryname%>"><%=value.categoryname%></option>
                                  <%})%>
                                  <!-- Add more options as needed -->
                                </select>
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div>
                                <label for="brand" class="form-label"
                                  >Brand</label
                                >
                                <input
                                  type="text"
                                  name="brand"
                                  value="<%=products.brand%>"
                                  id="brand"
                                  class="form-control"
                                  required
                                />
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div>
                                <label for="stock" class="form-label"
                                  >Stock</label
                                >
                                <input
                                  type="number"
                                  name="stock"
                                  id="stock"
                                  value="<%=products.stock%>"
                                  class="form-control"
                                  required
                                />
                              </div>
                            </div>
                            <div class="col-md-6">
                              <div>
                                <label for="price" class="form-label"
                                  >Price</label
                                >
                                <input
                                  type="number"
                                  name="price"
                                  id="price"
                                  value="<%=products.price%>"
                                  class="form-control"
                                  required
                                />
                              </div>
                            </div>
                            <div class="col-12">
                              <div>
                                <label for="description" class="form-label"
                                  >Description</label
                                >
                                <textarea
                                  name="description"
                                  id="description"
                                  
                                  class="form-control"
                                  required
                                >"<%=products.description%>"</textarea>
                              </div>
                            </div>

                            
                            <div class="col-12 row mt-4">
                              <%for(let i=0;i < 4;i++){%>  
                                <div class="col-6 col-md-3 mb-3 rounded-image-preview">
                                  <label class="image-label"  for="imageInput<%= i + 1 %>">Image Slot <%= i + 1 %>
                                  <div class=" rounded-image-preview">
                                    <img   id="imagePreview<%= i + 1 %>" src="<%= products.images[i] ? '/static/produtsImages/' + products.images[i] : '/static/admin/assets/images/dummy/dummyimage.jpg' %>" alt="Preview" name="images" />
                                  </div>
                                  <input type="file"  value="/static/produtsImages/<%=products.images[i]%>"  name="images" class="imageInput" id="imageInput<%= i + 1 %>" accept="image/*"  />
                                </label>
                                </div>
  
                             
                    <%}%>
  
                              
                            <div class="col-12">
                              <button type="submit" class="btn btn-primary">
                                <em class="icon ni ni-plus"></em>
                                <span>Update</span>
                              </button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  

  <script>
  $(document).ready(function() {
    $(".imageInput").change(function() {
      var input = this;
      var imagePreview = $(input).siblings('.rounded-image-preview').children('img')[0];

      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function(e) {
          imagePreview.src = e.target.result;
          $(imagePreview).show();
        };

        reader.readAsDataURL(input.files[0]);
}});});
  </script>
  <script src="/static/admin/assets/js/bundlee5ca.js?ver=3.2.3"></script>
  <script src="/static/admin/assets/js/scriptse5ca.js?ver=3.2.3"></script>
  <script src="/static/admin/assets/js/demo-settingse5ca.js?ver=3.2.3"></script>
