                      <div class="card-body">
                        <% if (address && address.length !== 0) { for (let i =
                        0; i < address.length; i++) { %>
                        <div
                          class="address-col-checkout-main col-11 mt-5 mt-lg-5 ml-4 ml-sm-0 mt-lg-0 mr-lg-5 my-lg-5 d-flex justify-content-start"
