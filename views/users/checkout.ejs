  function serialize(form) {
    const formData = new FormData(form);
    const serialized = Array.from(formData)
      .map((entry) => {
        return (
          encodeURIComponent(entry[0]) + "=" + encodeURIComponent(entry[1])
        );
      })
      .join("&");

    return serialized;
  }

