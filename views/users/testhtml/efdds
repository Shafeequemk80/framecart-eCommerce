<script>
  document.addEventListener("DOMContentLoaded", function () {
    const registrationForm = document.getElementById("addaddress-form");
    const signupButton = document.getElementById("addnew-address");

    signupButton.addEventListener("click", function () {
      if (validationAddress()) {
        const formData = serialize(registrationForm);
        console.log("Complete Form Data:", formData);

        fetch("/newaddress", {
          method: "POST",
          body: formData,
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.json();
          })
          .then((data) => {
            if (data.success) {
             
              Swal.fire({
                title: "Added Successfully",
                text: "Your new address has been added successfully.",
                icon: "success"
            })
            .then (() =>  window.location.href = "/address")
            }
          })
          .catch((error) => {
            // Handle any unexpected errors
            console.error("Error:", error);
            // Show a generic error message to the user
            Swal.fire({
              title: "Error!",
              text: "An unexpected error occurred. Please try again later.",
              icon: "error",
            });
          });
      }
    });
  });

  function serialize(form) {
    const formData = new FormData(form);
    const serialized = Array.from(formData)
      .map((entry) => {
        return (
          encodeURIComponent(entry[0]) + "=" + encodeURIComponent(entry[1])
        );
      })
      .join("&");

    return serialized;
  }

  function handleResponse(data) {}
</script>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const editaddressform = document.getElementById("editaddress-form");
    const editsaveButton = document.getElementById("editnew-address");

    editsaveButton.addEventListener("click", function () {
      if (validationeditAddress()) {
        const editedformData = serialize(editaddressform);
        console.log("Complete Form Data:", editedformData);

        fetch("/editaddress", {
          method: "POST",
          body: editedformData,
          headers: {
            "Content-Type": "application/x-www-form-urlencoded",
          },
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.json();
          })
          .then((data) => {
            if (data.success) {
             
              Swal.fire({
                title: "Address changed Successfully",
                text: "Your edit address has been added successfully.",
                icon: "success"
            })
            .then (() =>  window.location.href = "/address")
            }
          })
          .catch((error) => {
            // Handle any unexpected errors
            console.error("Error:", error);
            // Show a generic error message to the user
            Swal.fire({
              title: "Error!",
              text: "An unexpected error occurred. Please try again later.",
              icon: "error",
            });
          });
      }
    });
  });

  function serialize(form) {
    const formData = new FormData(form);
    const serialized = Array.from(formData)
      .map((entry) => {
        return (
          encodeURIComponent(entry[0]) + "=" + encodeURIComponent(entry[1])
        );
      })
      .join("&");

    return serialized;
  }

  function handleResponse(data) {}
</script>
<script src="/static/js/validation.js"></script>

<script>
  function confirmDelete(productId) {
    Swal.fire({
      title: "Are you sure?",
      text: "You won't be able to revert this!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes, delete it!"
    }).then((result) => {
      if (result.isConfirmed) {
        Swal.fire({
          title: "Deleted!",
          text: "Your file has been deleted.",
          icon: "success"
        });

        // If the user confirms, you can redirect or perform other actions here
        // For example, you can redirect to the delete URL with the parameters
        window.location.href = "/deleteaddress?pos="+productId;
      }
    });
  }
</script>
