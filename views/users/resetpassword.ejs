<%- include("../layouts/header.ejs")%>

<div class="container">
    <div class="row d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-7 col-lg-5">
            <div class="wrap">
                <div class="img" style="background-image: url(images/bg-1.jpg)"></div>
                <div class="login-wrap p-4 p-md-5">
                    <h3 class="text-center mb-4">Reset Password</h3>
                    <form action="" method="post" class="signin-form" onsubmit=" return validateresetpasword()">
                        <div class="form-group">
                            <label  for="username">Enter New Password</label>
                            <input type="password" class="form-control" id="password-reset" name="password"  />
                           
                        </div>
                        <p id="password-error" class="error-message"></p>
                        <div class="form-group">
                            <label  for="username"> Confim Password</label>
                            <input type="password" class="form-control" id="cpassword" name="cpassword"  />
                           
                        </div>
                        <p id="cpassword-mismatch" class="error-message"></p>
                        <input type="hidden" name="user_id" value="<%= user_id %>" />
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Reset Password</button>
                        </div>
                       
                    </form>
					<% if (typeof message !== "undefined") { %>
               
						<div class="alert alert-secondary" role="alert">
						  <!-- Replace the message with your dynamic message -->
						  <%= message %>
					   
					  </div>
					<% } %>
                  
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/static/js/validation.js"></script>
<%- include("../layouts/footer.ejs")%>
